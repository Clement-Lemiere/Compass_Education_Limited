{% extends 'base.html.twig' %}

{% block title %}Formation{% endblock %}

{% block body %}
    <h1>Formation</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ formation.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ formation.title }}</td>
            </tr>
            <tr>
                <th>Objective</th>
                <td>{{ formation.objective }}</td>
            </tr>
            <tr>
                <th>Duration</th>
                <td>{{ formation.duration }}</td>
            </tr>
            <tr>
                <th>Cost</th>
                <td>{{ formation.cost }}</td>
            </tr>
            <tr>
                <th>StartDate</th>
                <td>{{ formation.startDate ? formation.startDate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Satisfaction</th>
                <td>{{ formation.satisfaction }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_admin_formation_index') }}">back to list</a>

    <a href="{{ path('app_admin_formation_edit', {'id': formation.id}) }}">edit</a>

    {{ include('admin/formation/_delete_form.html.twig') }}
{% endblock %}
