{% extends 'base.html.twig' %}

{% block title %}Student{% endblock %}

{% block body %}
    <h1>Student</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ student.id }}</td>
            </tr>
            <tr>
                <th>FirstName</th>
                <td>{{ student.firstName }}</td>
            </tr>
            <tr>
                <th>LastName</th>
                <td>{{ student.lastName }}</td>
            </tr>
            <tr>
                <th>Birthdate</th>
                <td>{{ student.birthdate ? student.birthdate|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Nationality</th>
                <td>{{ student.nationality }}</td>
            </tr>
            <tr>
                <th>Level</th>
                <td>{{ student.level }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_admin_student_index') }}">back to list</a>

    <a href="{{ path('app_admin_student_edit', {'id': student.id}) }}">edit</a>

    {{ include('admin/student/_delete_form.html.twig') }}
{% endblock %}
