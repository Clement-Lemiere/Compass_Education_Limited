{% extends 'front_base.html.twig' %}

{% block title %}Login{% endblock %}

{% block body %}
<main>
    <form method="post" class="loginForm">
        {% if error %}
            <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}
        {% if app.user %}
            <div class="logOutSection">
                You are logged in as {{ app.user.userIdentifier }}. <a class="logOutBtn" href="{{ path('app_logout') }}">Logout</a>
            </div>
        {% endif %}
        <h1 class="formTitle">Login</h1>
        <div>
            <label for="inputEmail">Email</label>
            <input type="email" value="{{ last_username }}" name="email" id="inputEmail" autocomplete="email" required autofocus>
        </div>
        <div>
            <label for="inputPassword">Password</label>
            <input type="password" name="password" id="inputPassword" autocomplete="current-password" required>
        </div>
        <div class="rememberMe">
            <label for="inputCheckBox" >Remember me ?</label>
            <input type="checkbox" id="inputCheckBox" name="_remember_me" checked>
        </div>
            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
        <div>
            <button class="submitBtn" type="submit">
                Login
            </button>
        </div>
        <div>
            <p>Don't have an account yet? Sign up here !</p>
            <div class="signUpBtn">
                <a href="/signUp">Sign up</a>
            </div>
        </div>
    </form>
</main>
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}
{% endblock %}
