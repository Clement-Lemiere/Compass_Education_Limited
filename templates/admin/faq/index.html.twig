{% extends 'base.html.twig' %}

{% block title %}FAQ index{% endblock %}

{% block body %}
    <h1 class="text-5xl font-extrabold text-center">FAQ index</h1>
<div class="relative overflow-x-auto shadow-md sm:rounded-lg">
    <table class="w-full text-sm text-left text-gray-500 dark:text-gray-400">
        <thead class="text-xs text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400">
            <tr>
                <th scope="col" class="px-6 py-3">Id</th>
                <th scope="col" class="px-6 py-3">Question</th>
                <th scope="col" class="px-6 py-3">Answer</th>
                <th scope="col" class="px-6 py-3">actions</th>
            </tr>
        </thead>
        <tbody>
        {% for faq in faqs %}
            <tr class="bg-white border-b dark:bg-gray-800 dark:border-gray-700 hover:bg-gray-50 dark:hover:bg-gray-600">
                <td class="px-6 py-4">{{ faq.id }}</td>
                <td class="px-6 py-4">{{ faq.question }}</td>
                <td class="px-6 py-4">{{ faq.answer }}</td>
                <td class="px-6 py-4">
                    <a class="font-medium text-blue-600 dark:text-blue-500 hover:underline" href="{{ path('app_admin_faq_show', {'id': faq.id}) }}">show</a>
                    <a class="font-medium text-blue-600 dark:text-blue-500 hover:underline" href="{{ path('app_admin_faq_edit', {'id': faq.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
    <a class="text-xs text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400 px-6 py-4" href="{{ path('app_admin_faq_new') }}">Create new</a>
{% endblock %}
