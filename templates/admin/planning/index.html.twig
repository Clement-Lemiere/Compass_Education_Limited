{% extends 'base.html.twig' %}

{% block title %}Planning index{% endblock %}

{% block body %}
    <h1>Planning index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Type</th>
                <th>Date</th>
                <th>Time</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for planning in plannings %}
            <tr>
                <td>{{ planning.id }}</td>
                <td>{{ planning.type }}</td>
                <td>{{ planning.date ? planning.date|date('Y-m-d') : '' }}</td>
                <td>{{ planning.time ? planning.time|date('H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_admin_planning_show', {'id': planning.id}) }}">show</a>
                    <a href="{{ path('app_admin_planning_edit', {'id': planning.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_admin_planning_new') }}">Create new</a>
{% endblock %}
