{% extends 'base.html.twig' %}

{% block title %}FAQ index{% endblock %}

{% block body %}
<h1 class="tableTitle">FAQ index</h1>
<div class="tableFeatures">
    <a class="newBtn" href="{{ path('app_admin_faq_new') }}">Create new FAQ</a>
</div>
<div>
    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Question</th>
                <th>Answer</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for faq in faqs %}
            <tr>
                <td>{{ faq.id }}</td>
                <td>{{ faq.question }}</td>
                <td>{{ faq.answer }}</td>
                <td>
                    <a href="{{ path('app_admin_faq_show', {'id': faq.id}) }}">show</a>
                    <a href="{{ path('app_admin_faq_edit', {'id': faq.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
