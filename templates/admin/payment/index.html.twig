{% extends 'base.html.twig' %}

{% block title %}Payment index{% endblock %}

{% block body %}
<div {{ react_component('Navbar') }}></div> 
    <h1 class="text-5xl font-extrabold text-center">Payment index</h1>
<div class="relative overflow-x-auto shadow-md sm:rounded-lg">
    <table class="w-full text-sm text-left text-gray-500 dark:text-gray-400">
        <thead class="text-xs text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400">
            <tr>
                <th scope="col" class="px-6 py-3">Id</th>
                <th scope="col" class="px-6 py-3">Date</th>
                <th scope="col" class="px-6 py-3">Type</th>
                <th scope="col" class="px-6 py-3">actions</th>
            </tr>
        </thead>
        <tbody>
        {% for payment in payments %}
            <tr class="bg-white border-b dark:bg-gray-800 dark:border-gray-700 hover:bg-gray-50 dark:hover:bg-gray-600">
                <td class="px-6 py-4">{{ payment.id }}</td>
                <td class="px-6 py-4">{{ payment.date ? payment.date|date('Y-m-d H:i:s') : '' }}</td>
                <td class="px-6 py-4">{{ payment.type }}</td>
                <td class="px-6 py-4">
                    <a class="font-medium text-blue-600 dark:text-blue-500 hover:underline"  href="{{ path('app_admin_payment_show', {'id': payment.id}) }}">show</a>
                    <a class="font-medium text-blue-600 dark:text-blue-500 hover:underline"  href="{{ path('app_admin_payment_edit', {'id': payment.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
    <a class="text-xs text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400 px-6 py-4" href="{{ path('app_admin_payment_new') }}">Create new</a>
{% endblock %}
