{% extends 'base.html.twig' %}

{% block title %}Resource index{% endblock %}

{% block body %}
    <h1 class="tableTitle">Resource index</h1>
    <div class="tableFeatures">
        <a class="newBtn" href="{{ path('app_admin_resource_new') }}">Create new Resource</a>
    </div>
<div >
    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Type</th>
                <th>Title</th>
                <th>Content</th>
                <th>PublishedDate</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for resource in resources %}
            <tr>
                <td>{{ resource.id }}</td>
                <td>{{ resource.type }}</td>
                <td>{{ resource.title }}</td>
                <td>{{ resource.content }}</td>
                <td>{{ resource.publishedDate ? resource.publishedDate|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_admin_resource_show', {'id': resource.id}) }}">show</a>
                    <a href="{{ path('app_admin_resource_edit', {'id': resource.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
