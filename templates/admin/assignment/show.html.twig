{% extends 'base.html.twig' %}

{% block title %}Assignment{% endblock %}

{% block body %}
    <h1>Assignment</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ assignment.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ assignment.title }}</td>
            </tr>
            <tr>
                <th>Content</th>
                <td>{{ assignment.content }}</td>
            </tr>
            <tr>
                <th>StartDate</th>
                <td>{{ assignment.startDate ? assignment.startDate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>DueDate</th>
                <td>{{ assignment.dueDate ? assignment.dueDate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Grade</th>
                <td>{{ assignment.grade }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_admin_assignment_index') }}">back to list</a>

    <a href="{{ path('app_admin_assignment_edit', {'id': assignment.id}) }}">edit</a>

    {{ include('admin/assignment/_delete_form.html.twig') }}
{% endblock %}
